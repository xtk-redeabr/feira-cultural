.col-md-7
  .content
    %h1.title= I18n.t 'event_title'
    %hr
    %div= I18n.t 'event_subtitle'
    %hr
    
    
    
    #myActivities.carousel.slide{"data-ride" => "carousel"}
      / Indicators
      %ol.carousel-indicators
        %li.active{"data-slide-to" => "0", "data-target" => "#myActivities"}
        %li{"data-slide-to" => "1", "data-target" => "#myActivities"}
        %li{"data-slide-to" => "2", "data-target" => "#myActivities"}
        %li{"data-slide-to" => "3", "data-target" => "#myActivities"}
      / Wrapper for slides
      .carousel-inner{:role => "listbox"}
        .item.active
          %img{:alt => "Image", :src => "https://placehold.it/1200x400?text=IMAGE"}/
          .carousel-caption
            %h3= I18n.t 'act_name_1'
            %p= I18n.t 'act_desc_1'
            %p= I18n.t 'act_time_1'
            %p= I18n.t 'act_location_1'
        .item
          %img{:alt => "Image", :src => "https://placehold.it/1200x400?text=Another Image Maybe"}/
          .carousel-caption
            %h3= I18n.t 'act_name_2'
            %p= I18n.t 'act_desc_2'
            %p= I18n.t 'act_time_2'
            %p= I18n.t 'act_location_2'
        .item
          %img{:alt => "Image", :src => "https://placehold.it/1200x400?text=Another Image Maybe"}/
          .carousel-caption
            %h3= I18n.t 'act_name_3'
            %p= I18n.t 'act_desc_3'
            %p= I18n.t 'act_time_3'
            %p= I18n.t 'act_location_3'
            
        
      / Left and right controls
      %a.left.carousel-control{"data-slide" => "prev", :href => "#myActivities", :role => "button"}
        %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
        %span.sr-only Previous
      %a.right.carousel-control{"data-slide" => "next", :href => "#myActivities", :role => "button"}
        %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
        %span.sr-only Next
    

    
    
    
    %p= I18n.t 'event_content_1'
    %p= I18n.t 'event_content_2'
    %p= I18n.t 'event_content_3'
    %hr
    %h5= I18n.t 'event_details'
    .video
      %iframe{:allowfullscreen => "", :frameborder => "0", :height => "315", :src => "https://www.youtube.com/embed/-ErWgBhdPvE?rel=0&controls=0&showinfo=0", :width => "560"}
    %a= link_to 'Framingham State University', 'https://framingham.edu'
    
.col-md-5
  .days
    %h1.days_number
      = (Date.new(2017, 11, 3) - Date.today).to_s.split('/')[0]
    %a.days_description
      days up to event
  %br
  %h1= I18n.t 'new_member'
  = render 'form'
